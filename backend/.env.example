PORT=5000
MONGODB_URI=mongodb://localhost:27017/review-system
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Google Place ID (Required for Google Review redirect feature)
# Get it from: https://developers.google.com/maps/documentation/places/web-service/place-id
GOOGLE_PLACE_ID=your_google_place_id_here

# Google API Key (Optional - only needed to fetch/display existing Google reviews)
# Get it from: https://console.cloud.google.com/
GOOGLE_API_KEY=your_google_api_key_here

NODE_ENV=development
FRONTEND_URL=http://localhost:5173
# For production, add your Vercel URL:
# FRONTEND_URL=https://your-app.vercel.app
